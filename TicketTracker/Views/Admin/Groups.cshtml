@model IEnumerable<AssignmentGroup>
@{
    Layout = "_Layout";
}

<table class="table table-striped table-bordered" >
    <tr><th>GroupID</th><th>Group Name</th><th></th></tr>
    @foreach(var g in Model)
    {
        <tr>
            <td>@g.Id</td>
            <td>@g.Name</td>
            <td>
                <form method="post" asp-action="DeleteGroup" asp-route-groupId="@g.Id">
                    <a class="btn btn-secondary" asp-action="EditGroup" asp-route-groupId="@g.Id">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateGroup" class="btn btn-primary">Create Group</a>
